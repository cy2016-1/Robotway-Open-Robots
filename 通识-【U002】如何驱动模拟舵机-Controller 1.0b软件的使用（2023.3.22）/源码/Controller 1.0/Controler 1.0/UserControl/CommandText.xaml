<UserControl x:Class="Command_Text.CommandText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Command_Text"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel x:Name="cmdPanel" Orientation="Horizontal">
        <Border Height="20" Width="35" BorderThickness="0,0,1,1" BorderBrush="#FFACAAAA">
            <Button x:Name="cmdBtn" BorderThickness="0" Margin="0">1</Button>
        </Border>
        <Border Height="20" BorderThickness="0,0,0,1" BorderBrush="#FFACAAAA">
            <Label x:Name="cmdLabel" Height="20" MinWidth="2000" Padding="5,1,1,1" BorderThickness="0,0,0,1" BorderBrush="#FFACAAAA" VerticalContentAlignment="Center" >#22P2333T0</Label>
        </Border>
    </StackPanel>
</UserControl>
