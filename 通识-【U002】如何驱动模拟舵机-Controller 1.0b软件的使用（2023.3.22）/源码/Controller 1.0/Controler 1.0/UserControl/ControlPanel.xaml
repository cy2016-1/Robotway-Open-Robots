<UserControl x:Class="Controler_Panel.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controler_1._0"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Background="HotPink" Height="70" Width="100">
        <Border >
            <Label x:Name="label" Width="100" HorizontalAlignment="Center" FontSize="10" Content="P0" Cursor="Hand" HorizontalContentAlignment="Center"/>
        </Border>
        <Border>
            <TextBox x:Name="text" Height="23" Width="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="1500" KeyDown="text_KeyDown"></TextBox>
        </Border>
        <Border>
            <Slider x:Name="slider" Height="20" Margin="0,3,0,0" Value="1500" Minimum="500" Maximum="2500" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
        </Border>
    </StackPanel>
</UserControl>
